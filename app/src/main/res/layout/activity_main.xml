<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".src.main.MainActivity">


    <FrameLayout
        android:id="@+id/main_frm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:id="@+id/main_btm_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/white_bottom_sheet_view_radius_21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >
        <LinearLayout
            android:id="@+id/menu_main_btm_nav_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/menu_main_btm_nav_list_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bottom_list"
                android:padding="3dp"
                android:background="@drawable/yellow_view_radious_100"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_btm_nav_home_title"
                android:textSize="10sp"
                android:textColor="@color/text_color_nonactive"
                tools:ignore="SmallSp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_btm_nav_stat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/menu_main_btm_nav_stat_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bottom_stat"
                android:padding="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_btm_nav_STATS_title"
                android:textSize="10sp"
                android:textColor="@color/text_color_nonactive"
                tools:ignore="SmallSp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_main_btm_nav_plant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/menu_main_btm_nav_plant_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bottom_plant"
                android:padding="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_btm_nav_plant_title"
                android:textSize="10sp"
                android:textColor="@color/text_color_nonactive"
                tools:ignore="SmallSp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_main_btm_nav_mypage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/menu_main_btm_nav_mypage_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bottom_mypage"
                android:padding="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_btm_nav_my_page_title"
                android:textSize="10sp"
                android:textColor="@color/text_color_nonactive"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>