<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_goal_digital_detox_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/black_bottom_stroke">
            <View
                android:id="@+id/row_goal_pink_view"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/pink_view_radius_3"
                android:layout_alignParentStart="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="14dp"
                />
            <TextView
                android:id="@+id/digital_detox_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="11dp"
                android:paddingStart="9dp"
                tools:ignore="RtlSymmetry"

                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:text="@string/digital_detox"
                app:layout_constraintStart_toEndOf="@id/row_goal_pink_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/digital_detox_arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_bottom_arrow"
                app:layout_constraintStart_toEndOf="@id/digital_detox_text_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"

                />


            <TextView
                android:id="@+id/goal_digital_detox_min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/min"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="19dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/list_goal_digital_detox_rv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_goal_digital_detox_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_goal_self_development_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/black_bottom_stroke">
            <View
                android:id="@+id/row_goal_yellow_view"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/yellow_view_radius_3"
                android:layout_alignParentStart="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="14dp"
                />
            <TextView
                android:id="@+id/self_deveolpment_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="11dp"
                android:paddingStart="9dp"
                tools:ignore="RtlSymmetry"

                android:textSize="15sp"
                android:textColor="@color/text_color"
                android:text="@string/self_development"
                app:layout_constraintStart_toEndOf="@id/row_goal_yellow_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/self_deveolpment_arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_bottom_arrow"
                app:layout_constraintStart_toEndOf="@id/self_deveolpment_text_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                />


            <TextView
                android:id="@+id/goal_self_develop_min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="19dp"
                android:text="@string/min"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/list_goal_self_development_rv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_goal_self_development_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>

