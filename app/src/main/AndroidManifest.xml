<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.springboard.zzatmari">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name="com.springboard.zzatmari.config.Application"
        android:icon="@drawable/zzatmari_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.springboard.zzatmari.src.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.springboard.zzatmari.src.initial_setting.time_pick.InitialTimePickActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.springboard.zzatmari.src.initial_setting.list.InitialSelfDevelopmentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.springboard.zzatmari.src.initial_setting.list.InitialDigitalDetoxActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.springboard.zzatmari.src.main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.springboard.zzatmari.src.main.list.timer.list.TimerListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.springboard.zzatmari.src.main.list.timer.TimerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.springboard.zzatmari.src.main.list.timer.add.TimerAddActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.springboard.zzatmari.src.main.list.timer.change.TimerChangeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".src.account.LogInActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".src.account.SignUpActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>